# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=education_platform
DB_USER=postgres
DB_PASSWORD=your_password_here
# 설명: PostgreSQL 데이터베이스 연결 정보

# 애플리케이션 설정
APP_PORT=3000
NODE_ENV=development
# 설명: 
# - APP_PORT: 애플리케이션이 실행될 포트 번호
# - NODE_ENV: 실행 환경 (development, production, test)

# 보안 설정
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
# 설명:
# - JWT_SECRET: JWT 토큰 서명에 사용될 비밀 키
# - JWT_EXPIRES_IN: 토큰 만료 시간

# API 설정
API_PREFIX=/api/v1
# 설명: API 엔드포인트의 기본 경로

# 로깅 설정
LOG_LEVEL=debug
# 설명: 로그 레벨 (debug, info, warn, error)

# 세션 설정
SESSION_SECRET=your_session_secret_here
SESSION_COOKIE_MAX_AGE=86400000
# 설명:
# - SESSION_SECRET: 세션 암호화에 사용될 비밀 키
# - SESSION_COOKIE_MAX_AGE: 세션 쿠키 유효 시간 (밀리초)

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
# 설명:
# - MAX_FILE_SIZE: 최대 파일 크기 (바이트)
# - UPLOAD_DIR: 파일 업로드 디렉토리

# 이메일 설정 (필요한 경우)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password_here
# 설명: 이메일 발송을 위한 SMTP 서버 설정

# 캐시 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
# 설명: Redis 캐시 서버 연결 정보

# 모니터링 설정
MONITORING_ENABLED=true
# 설명: 시스템 모니터링 활성화 여부 